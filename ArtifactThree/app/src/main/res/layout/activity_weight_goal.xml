<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/goal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_goal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/goal_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/weight_goal_hint"
            android:inputType="numberDecimal"
            android:padding="12dp" />

        <Button
            android:id="@+id/add_goal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_goal"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/current_goal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_weight_goal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/current_goal_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/current_goal_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/delete_goal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/delete"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/to_weight_entry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Weight Entry"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="?attr/colorAccent"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>
</LinearLayout>
